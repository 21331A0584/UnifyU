<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.UnifyU" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Color theming for dark mode -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorSecondary">@color/secondary_dark</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorSurface">#121212</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>
        
        <!-- Status bar and navigation -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Component styles -->
        <item name="materialButtonStyle">@style/Widget.UnifyU.Button</item>
        <item name="materialCardViewStyle">@style/Widget.UnifyU.CardView</item>
        <item name="textInputStyle">@style/Widget.UnifyU.TextInputLayout</item>
        
        <!-- Text appearances -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.UnifyU.Headline1</item>
        <item name="textAppearanceBody1">@style/TextAppearance.UnifyU.Body1</item>
    </style>
</resources>